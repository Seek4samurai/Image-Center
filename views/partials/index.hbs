  <div class="container text-center">
    <div class="title py-5">
      <h1>Image Center</h1>
      <p class="subtitle">Upload images to <strong>Server</strong></p>
    </div>
    <div class="row justify-content-center">
      <div class="col-4">
        <form action="/uploadmultiple" enctype="multipart/form-data">
          <div class="row">
            <div class="col-8">
